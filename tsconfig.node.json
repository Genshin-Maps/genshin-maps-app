{
    "include": ["config/*.vite.config.*", "plugins/**/*.ts", "src/backend/**/*", "src/preload/**/*", "@types/**/*.d.ts"],
    "compilerOptions": {
        "composite": true,
        "target": "esnext",
        "module": "esnext",
        "sourceMap": false,
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "types": ["node"],
        "paths": {
            "@/*": ["./src/*"],
            "@t/*": ["./@types/*"]
        }
    }
}
