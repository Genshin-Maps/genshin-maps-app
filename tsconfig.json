{
    "extends": "@electron-toolkit/tsconfig/tsconfig.json",
    "include": ["src/renderer/**/*", "@types/**/*.d.ts"],
    "compilerOptions": {
        "verbatimModuleSyntax": true,
        "useDefineForClassFields": true,
        "strict": false,
        "allowJs": true,
        "checkJs": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "paths": {
            "@/*": ["./src/*"],
            "@t/*": ["./@types/*"]
        }
    },
    "references": [{ "path": "./tsconfig.node.json" }]
}
