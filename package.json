{
    "name": "genshin-maps-app",
    "version": "1.0.0",
    "description": "Gamedot genshin maps app using electron.",
    "author": "Genshin-Maps",
    "license": "MIT",
    "type": "module",
    "main": "out/main/index.cjs",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
        "typecheck": "pnpm run typecheck:node && pnpm run svelte-check",
        "start": "pnpm run vite:build && electron .",
        "dev": "pnpm run vite:build",
        "build": "pnpm run typecheck && pnpm run vite:build",
        "postinstall": "electron-builder install-app-deps",
        "build:win": "pnpm run build && electron-builder --win --config",
        "build:mac": "pnpm run build && electron-builder --mac --config",
        "build:linux": "npm run build && electron-builder --linux --config",
        "vite:build": "pnpm run vite:main && pnpm run vite:preload && pnpm run vite:renderer",
        "vite:main": "vite build -c ./config/main.vite.config.js",
        "vite:preload": "vite build -c ./config/preload.vite.config.js",
        "vite:renderer": "vite build -c ./config/renderer.vite.config.js"
    },
    "dependencies": {
        "@lwahonen/ffi-napi": "^4.0.12",
        "@lwahonen/ref-napi": "^4.0.8",
        "axios": "^1.4.0",
        "lodash": "^4.17.21",
        "ref-array-di": "^1.2.2"
    },
    "devDependencies": {
        "@electron-toolkit/preload": "^1.0.3",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@electron/notarize": "^1.2.3",
        "@electron/rebuild": "^3.2.13",
        "@sveltejs/vite-plugin-svelte": "^2.1.1",
        "@tsconfig/svelte": "^4.0.1",
        "@types/ffi-napi": "^4.0.7",
        "@types/lodash": "^4.14.194",
        "@types/node": "^18.16.3",
        "@types/ref-array-di": "^1.2.5",
        "@types/ref-napi": "^3.0.7",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "electron": "^24.1.3",
        "electron-builder": "^23.6.0",
        "electron-updater": "^5.3.0",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-svelte3": "^4.0.0",
        "prettier": "^2.8.8",
        "sass": "^1.62.1",
        "svelte": "^3.58.0",
        "svelte-check": "^3.2.0",
        "svelte-preprocess": "^5.0.3",
        "tslib": "^2.5.0",
        "typescript": "^5.0.4",
        "vite": "^4.3.4",
        "vite-plugin-css-injected-by-js": "^3.1.0"
    }
}